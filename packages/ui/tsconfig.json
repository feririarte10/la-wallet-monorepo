{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["dist", "node_modules", "src/stories/*", "src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
